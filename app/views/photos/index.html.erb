<h1>List of Photos</h1>
<div>
<a href="/photos/new">Add a new photo</a>
</div>
<% @list_of_all_my_photos.each do |the_photo| %>
  <p>
    <%=the_photo.caption %>
  </p>

  <img src="<%=the_photo.source%>">


  <div>
  <a href="/photos/<%=the_photo.id%>">Show Details</a>
  <a href="/photos/<%=the_photo.id%>/edit">Edit</a>
  <a href="/photos/delete_photo/<%=the_photo.id%>">Delete</a>
  </div>
<% end %>
